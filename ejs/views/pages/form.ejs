<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/header.ejs') %>
</head>
<body class="bg-dark">
    <header>
        <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
            <span class="navbar-brand fw-bold">Productos</span>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <%- include("../partials/navlinks.ejs") -%>
            </div>
        </div>
        </nav>
    </header>
    <div class="container mt-0">
        <div class="row vh-100 align-items-center justify-content-center">
            <div class="col-auto">
                <div class="card bg-light" style="width: 500px;">
                    <div class="card-body">
                        <div class="mb-3 text-center">
                            <h1 class="fw-bold text-success">Productos</h1>
                        </div>
                        <div class="mb-3">
                            <label for="tituloInput1" class="form-label fw-bold fs-5">Titulo</label>
                            <input type="text" class="form-control" id="tituloInput1" placeholder="titulo">
                        </div>
                        <div class="mb-3">
                            <label for="precioInput1" class="form-label fw-bold fs-5">Precio</label>
                            <input type="number" class="form-control" id="precioInput1" placeholder="precio">
                        </div>
                        <div class="mb-3">
                            <label for="urlInput1" class="form-label fw-bold fs-5">Url</label>
                            <input type="text" class="form-control" id="urlInput1" placeholder="url">
                        </div>
                        <div class="mt-3 text-center">
                            <button type="button" class="btn btn-primary mb-3 fw-bold" onclick="enviarProducto()">Agregar Producto</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="text-center mt-3 mb-2">
        <%- include('../partials/footer.ejs') %>
    </footer>
    <script src="../../public/js/index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
